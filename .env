# MongoDB
MONGODB_URI=mongodb://localhost:27017/anatome-ai
MONGODB_USER=admin
MONGODB_PASSWORD=password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-secret-key-change-this
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=anatome-ai-videos

# External APIs
SERPER_API_KEY=
GOOGLE_GEMINI_API_KEY=
OPENROUTER_API_KEY=
OPENROUTER_MODEL=openai/gpt-5-nano
ANTHROPIC_API_KEY=

# Service Ports
API_GATEWAY_PORT=3000
USER_MANAGEMENT_PORT=3001
BUSINESS_DISCOVERY_PORT=3002
INSTAGRAM_DETECTION_PORT=3003
VIDEO_SCRAPING_PORT=8001
VIDEO_ANALYSIS_PORT=3004
REPORT_GENERATION_PORT=3005
ANALYTICS_PORT=3006
FILE_STORAGE_PORT=3007
JOB_QUEUE_PORT=3008

# Environment
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Instagram Scraping
INSTAGRAM_SESSION_FILE=./sessions/instagram_session.json
PROXY_LIST=
USE_PROXY=false

# Video Download Limits (per user subscription)
MAX_VIDEOS_FREE=50
MAX_VIDEOS_PRO=200
MAX_VIDEOS_ENTERPRISE=1000

# Discovery Configuration
DEFAULT_DISCOVERY_RADIUS=50
MAX_DISCOVERY_RADIUS=100

# Backblaze B2 (S3-compatible)
B2_ENDPOINT_URL=https://s3.us-west-002.backblazeb2.com
B2_BUCKET_NAME=anatome-ai-videos
B2_ACCESS_KEY_ID=
B2_SECRET_ACCESS_KEY=
B2_REGION=us-west-002